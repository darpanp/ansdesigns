<!-- content -->
<div id="content"><div class="ic">More Website Templates at TemplateMonster.com!</div>
	<div class="container">
		<div class="wrapper">
			<div class="aside">
				&nbsp;
			</div>
			<div class="mainContent">
				<h2>Step 1<em>provide contact information</em></h2>
				<% if @user.errors.any? %>
				  <ul class="error">
				  	<b>Please fix the errors below:</b>
				  	<% @user.errors.full_messages.each do |msg| %>
				      <li> <%= msg %></li>
				    <% end %>
				  </ul>
				  <br />
				<% end %>
				<%= form_for @user, :url=>'quote_first' do |userForm| %>
					<div class="field"><label for="text">Full Name</label><br /><%= userForm.text_field :fullname, :class=>'text' %></div>
					<div class="field"><label for="text">Company (optional)</label><br /><%= userForm.text_field :company, :class=>'text' %></div>
					<div class="field"><label for="text">Email</label><br /><%= userForm.text_field :email, :class=>'text' %></div>
					<div class="field"><label for="text">Confirm Email</label><br /><%= userForm.text_field :email_confirmation, :class=>'text' %></div>
					<div class="wrapper">
						<%= submit_tag value = "Continue", :class => "submit fleft"%>
					</div>
				<% end %>	
			</div>
		</div>
	</div>
</div>